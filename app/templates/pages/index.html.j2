{% extends 'layouts/wrapper.html.j2' %}

{% block content %}
<!-- css links --> 
<!-- ================================ -->
<link rel="stylesheet" href="{{ url_for('static', filename='css/main.css') }}">
<!-- ================================ -->
<div class="page-content">
    <h1 class="index-heading">Measurements Data</h1>
    <div class="chart-container">
            {% for chart in chart_data %}
                <div class="chart-box">
                    <canvas id="{{ chart.id }}"></canvas>
                </div>
            {% endfor %}
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    window.chartData = {{ chart_data | tojson }};
</script>
<script src="{{ url_for('static', filename='js/charts.js') }}"></script>
<script>
  document.querySelectorAll('.chart-box').forEach(box => {
    box.addEventListener('click', () => {
      // Remove 'focused' from any other chart
      document.querySelectorAll('.chart-box.focused').forEach(el => {
        if (el !== box) el.classList.remove('focused');
      });

      // Toggle the focused class on the clicked chart
      box.classList.toggle('focused');
    });
  });

  // Optional: Click outside to close
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.chart-box')) {
      document.querySelectorAll('.chart-box.focused').forEach(el =>
        el.classList.remove('focused')
      );
    }
  });

  // Optional: Press ESC to exit focus
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      document.querySelectorAll('.chart-box.focused').forEach(el =>
        el.classList.remove('focused')
      );
    }
  });
</script>

{% endblock %}

